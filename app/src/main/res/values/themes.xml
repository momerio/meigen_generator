<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meigen_generator" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="android:navigationBarColor">@color/theme_color</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColorSecondary">@color/meigen</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="android:navigationBarColor">@color/theme_color</item>
        <item name="android:textColorSecondary">@color/meigen</item>
    </style>

    <!-- 背景色の設定とタイトルカラーのスタイル設定 -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/titleTextStyle</item>
    </style>

    <!-- タイトルカラーの設定 -->
    <style name="titleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>